<article class="post">
  <h2>SignedUp user details:</h2>
  <form action="/users/review" method="POST" class="new-post-form">
    <div class="col-sm-12 col-md-12" id="todo-area">
      {{!-- <p>UserId: {{user._id}}</p> --}}
      <input id="UserId" name="UserId" type="text" value="{{user._id}}" hidden>
      <p>Username: {{user.username}}</p>
      <p>name: {{user.name}}</p>
    </div>
    <div>
       <h3>Existing reviews:</h3>
       {{#each reviews}} {{> review_item }} {{/each}}
    </div>
    <div>
       <h3>Favorite business:</h3>
       {{#each favbusiness}} {{> business_item }} {{/each}}
    </div>

    <div class="col-sm-12 col-md-6">
      <button id="write_review_button" type="submit" value="Write a review" class="ybtn ybtn--primary ybtn--big">
       <span>Write a review</span></button>
    </div>
  </form>
</article>